<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Create our type VendorGridDataProvider -->
    <virtualType name="VendorGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Training\Vendor\Model\Resource\Vendor\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">VendorGridFilterPool</argument> <!-- Define new object for filters -->
        </arguments>
    </virtualType>
    <!-- Create our type VendorGridFilterPool -->
    <virtualType name="VendorGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Type for vendor_index_listing_data_source -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="vendor_index_listing_data_source" xsi:type="string">Training\Vendor\Model\ResourceModel\Grid\Vendor\Collection</item>
            </argument>
        </arguments>
    </type>
    <!-- Simulate our class Training\Vendor\Model\ResourceModel\Grid\Vendor\Collection -->
    <virtualType name="Training\Vendor\Model\ResourceModel\Grid\Vendor\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">training_vendor</argument>
            <argument name="resourceModel" xsi:type="string">Training\Vendor\Model\ResourceModel\Vendor</argument>
        </arguments>
    </virtualType>

    <!-- Catalog -> Categories -> Products in Category -->
    <preference for="Magento\Catalog\Block\Adminhtml\Category\Tab\Product" type="Training\Vendor\Block\Catalog\Adminhtml\Category\Tab\Product" />
</config>